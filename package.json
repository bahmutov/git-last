{
  "name": "git-last",
  "description": "Shows last git commit SHA or/and saves it in a JSON file",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/git-last/issues",
  "bin": {
    "git-last": "src/index.js"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/git-last#readme",
  "keywords": [
    "commit",
    "git",
    "json",
    "last",
    "save",
    "util"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/git-last.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "lint-more": "eslint --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint && npm run lint-more",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.2",
    "dependency-check": "2.10.1",
    "deps-ok": "1.4.1",
    "dont-crack": "1.2.1",
    "eslint": "4.19.1",
    "eslint-plugin-immutable": "1.0.0",
    "execa": "0.11.0",
    "git-issues": "1.3.1",
    "license-checker": "13.1.0",
    "mocha": "3.5.3",
    "nsp": "2.8.1",
    "pre-git": "3.17.1",
    "prettier-standard": "6.0.0",
    "ramda": "0.25.0",
    "semantic-release": "15.12.0",
    "simple-commit-message": "4.0.3",
    "standard": "10.0.3",
    "travis-deploy-once": "5.0.9"
  },
  "dependencies": {
    "check-more-types": "2.24.0",
    "commander": "2.19.0",
    "ggit": "2.4.6",
    "lazy-ass": "1.6.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "plugins": [
      "immutable"
    ],
    "rules": {
      "no-var": 2,
      "immutable/no-let": 2,
      "immutable/no-this": 2,
      "immutable/no-mutation": 2
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
